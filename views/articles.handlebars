<div class="add-notes-container">
    <div id="article-id-holder"></div>
    <input type="text" name="title" id="title-note" class="input" placeholder="TITLE">
    <textarea name="body" id="body-note" class="input" placeholder="NOTES"></textarea>
    <button id="submit-notes-btn" class="btn">SAVE NOTES</button>
</div>

<div class="saved-articles-container">
    <header class="head-continaer">
        <h1>ARTICLES</h1>
        <button id="home-btn" class="btn article-btn">HOME</button>
    </header>

    <div class="big-container">
        {{#each savedArticles}}
        <div class="aside-article-wrapper">
            <div class="article-container" data-articleId="{{this._id}}" id="{{this._id}}">
                <h3>{{this.title}}</h3>
                <h4><a href="{{this.link}}">link</a></h4>
                <p>{{this.summary}}</p>
                <button id="delete-article-btn" class="btn article-btn">DELETE ARTICLE</button>
                <footer class="footer_btn-container" id='footer-container'>
                    <button id="add-note-btn" class="btn article-btn">ADD NOTE</button>
                    <button id="hide-show-article-btn" class="btn article-btn">NOTES</button>
                </footer>
            </div>
            <aside class="notes-container">
                <div class="body-title-container">
                    {{!-- {{#savedArticles}} --}}
                    <h3>{{this.note.title}}</h3>
                    <p>{{this.note.body}}</p>
                    {{!-- {{/savedArticles}} --}}
                </div>
                <button id="hide-show-note-btn" class="btn article-btn">X</button>
            </aside>
        </div>
        {{/each}}
    </div>
</div>

<script src="/js/saved.articles.js" type="text/javascript"></script>